@using ShoppingCart2.Models

@{
    ViewBag.Title = "Home Page";
}


@{
    foreach (var p in (List<PurchaseItem>)ViewData["PurchaseList"])
    {
        <div class="row" style="margin-top : 20px;">
            <div class="col-xs-12 col-md-4 col-md-offset-1 vcenter">
                <div class="thumbnail">
                    <img src="/Image/Index?imagename=@p.imageName" alt="...">
                    <div class="caption">
                        <h3>@p.productName</h3>
                        <p>@p.description</p>
                    </div>
                </div>
            </div>

            <div class="col-xs-12 col-md-6 vcenter">
                <table>
                    <tr>
                        <td> Purchased On :</td>
                        <td>@p.purchaseTime.Day.@p.purchaseTime.Month.@p.purchaseTime.Year</td>
                    </tr>
                    <tr>
                        <td> Quantity :</td>
                        <td> @p.activationCode.Count</td>
                    </tr>
                    <tr>
                        <td>
                            Activation Code : 
                        </td>
                        <td>
                            @{
                                if (p.activationCode.Count > 1)
                                {
                                <select style="padding : 5px; width : 300px">
                                @foreach (var code in p.activationCode)
                                    {
                                        <option>@code</option>
                                    }
                                </select>
                                }
                                else
                                {
                                    @p.activationCode[0]
                                }
                            }
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    }
}


